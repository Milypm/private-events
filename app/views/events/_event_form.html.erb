<%= form_with model: @event do |f| %>
  <div class="field">
    <% f.label :description %><br />
    <%= f.text_field :description, style:"width: 30rem;", placeholder:"Description" %>
  </div>
  <div class="field">
    <% f.label :date %><br />
    <%= f.datetime_select :date, style:"width: 30rem;" %>
  </div>
  <div class="field">
    <% f.label :location %><br />
    <%= f.text_field :location, style:"width: 17rem;", placeholder:"Location" %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "Create!", class:"btn btn-success" %>
  </div>
<% end %>
