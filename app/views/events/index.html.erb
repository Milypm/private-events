<div class="container pb-5 mt-3">
  <table class="table table-borderless border border-5 mx-auto" style="width: 40rem;">
    <thead>
      <tr class="bg-success">
        <th><h2 class="mt-1 mb-0 text-center text-white fw-bolder">Events</h2></th>
      </tr>
    </thead>
    <tbody>
      <tr class="table-secondary text-center">
        <th><h5 class="fs-4 text-dark fw-bolder">Upcoming</h5></th>
      </tr>
      <% if @events.empty? %>
        <tr class="text-center">
          <td><p class="fs-5 text-dark">No events to show :(</p></td>
        </tr>
      <% else %>    
        <% @events.future.each do |event| %>
          <tr>          
            <td class="d-flex justify-content-between mb-2">
              <div class="d-flex flex-column fs-5 align-items-start">
                <p class="fs-4 ml-1 fw-bold my-0 text-success"><%= event.description %></p>          
              </div>
              <div class="d-flex align-items-start">
                <h5 class=""><span class="badge bg-secondary"><%= badge(event) %></span></h5>&nbsp;&nbsp;
                <%= link_to 'Details', event_path(event), class:"btn btn-primary btn-sm fw-bold" %>
              </div>
            </td>          
          </tr>
        <% end %>
      <% end %>
      <tr class="table-secondary text-center">
        <th><h5 class="fs-4 text-dark fw-bolder">Previous</h5></th>
      </tr>
      <% if @events.empty? %>
        <tr class="text-center">
          <td><p class="fs-5 text-dark">No events to show :(</p></td>
        </tr>
      <% else %> 
        <% @events.past.each do |event| %>
          <tr>       
            <td class="d-flex justify-content-between mb-2">
              <div class="d-flex flex-column fs-5 align-items-start">
                <p class="fs-4 fw-bold my-0 text-success"><s><%= event.description %></s></p>
              </div>
              <div class="d-flex align-items-start">
                <h5 class=""><span class="badge bg-secondary"><%= badge(event) %></span></h5>&nbsp;&nbsp;
                <%= link_to 'Details', event_path(event), class:"btn btn-primary btn-sm fw-bold" %>
              </div>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>