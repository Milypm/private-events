<div class="container my-3 flex-column d-flex align-items-center">
  <div class="card border d-flex flex-column align-items-center" style="width: 50rem;">
    <div class="card-body text-center mt-3 d-flex flex-column align-items-center">
      <h1 class="card-title fs-2">Welcome, <%= welcome_logged_user %>!</h1>
      <br/>
      <div class="d-flex justify-content-between mt-2 mb-4" style="width: 19rem;">
        <%= link_to 'Create an Event', new_event_path, class:"btn btn-success" %>
        <br/>
        <%= link_to 'Go To All Events', events_path, class:"btn btn-success" %>
      </div>
      <br/>
      <div class="mt-3">
        <h2>My Events</h2><br/>
        <div class="d-flex justify-content-between" style="width: 40rem;">
          <div class="d-flex flex-column text-left flex-nowrap">
            <p class="fs-4">Attended</p>
            <p class="">
              <%= attended_past %><br/> 
            </p>
          </div>
          <div class="d-flex flex-column flex-nowrap m-0">
            <p class="fs-4">Upcoming</p>
            <p class="">
              <%= attended_future %><br/> 
            </p>
          </div>
        </div>
      </div>
      <br/>
    </div>
  </div>
</div>