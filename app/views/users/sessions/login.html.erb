<div class="card mx-auto mb-3" style="width: 25rem;">
  <div class="card-body pb-5 mt-2">
    <h2>Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <% f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", style:"width: 20rem;", placeholder:"Name" %>
      </div>
      <div class="field">
        <% f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style:"width: 20rem;", placeholder:"Email" %>
      </div>
      <div class="field">
        <% f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", style:"width: 20rem;", placeholder:"Password" %>
      </div>
      <br/>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <br/>
      <div class="actions">
        <%= f.submit "Log in", class:"btn btn-success" %>
      </div>
    <% end %>
    <br/>
    <%= render "devise/shared/links" %>
  </div>
</div>
